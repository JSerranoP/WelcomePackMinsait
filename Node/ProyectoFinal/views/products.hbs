<!DOCTYPE html>
<html>
    <head>
        <title>{{title}}</title>
    </head>

    <body>
        <nav>
            <form action="/users/logout" method="POST">
                <input type="submit" value="Logout"></input>
            </form>
        </nav>
        <h1>Todas los productos</h1>
        <ul>
            {{#each products}}
            <li>
                <h3>Name: {{ this.name }}</h3>
                <h3>Price: {{ this.price }}</h3>
                <h3>Description: {{ this.description }}</h3>
            </li>
            {{/each}}
        </ul>
    </body>
</html>